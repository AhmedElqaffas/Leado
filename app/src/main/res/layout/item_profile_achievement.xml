<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_marginTop="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/achievementImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        tools:src="@drawable/achievement1_icon"/>

    <TextView
        android:id="@+id/achievementTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/achievementImageView"
        app:layout_constraintLeft_toRightOf="@id/achievementImageView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="30dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/sfuitext_regular"
        tools:text="Achievement Title Here"
        android:textColor="#1f314a"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/achievementDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/achievementTitle"
        app:layout_constraintLeft_toLeftOf="@id/achievementTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingEnd="20dp"
        android:fontFamily="@font/sfuitext_regular"
        tools:text="This achievement proves that you are a great person"
        android:textColor="#1f314a"
        android:textSize="15sp"
        android:alpha="0.6"/>

</androidx.constraintlayout.widget.ConstraintLayout>