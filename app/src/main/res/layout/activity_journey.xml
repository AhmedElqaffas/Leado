<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccentLight"
        tools:context=".JourneyActivity">

        <ImageView
            android:id="@+id/imageView_section4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/imageView_section2"
            app:layout_constraintStart_toStartOf="@+id/imageView_section2"
            app:layout_constraintTop_toTopOf="@+id/imageView_section3"
            app:srcCompat="@drawable/info" />

        <TextView
            android:id="@+id/textView_section4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_white_transparent"
            android:elevation="8dp"
            android:fontFamily="@font/rubik_medium"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_section4"
            app:layout_constraintStart_toStartOf="@+id/imageView_section4"
            app:layout_constraintTop_toBottomOf="@+id/imageView_section4"
            tools:text="Goals Aspiration" />

        <ImageView
            android:id="@+id/done_imageView_section4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_section4"
            app:layout_constraintStart_toEndOf="@+id/imageView_section4"
            app:srcCompat="@drawable/ic_checked" />

        <ImageView
            android:id="@+id/imageView_section3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_section1"
            app:layout_constraintStart_toStartOf="@+id/imageView_section1"
            app:layout_constraintTop_toBottomOf="@+id/textView_section1"
            app:srcCompat="@drawable/info" />

        <TextView
            android:id="@+id/textView_section3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_white_transparent"
            android:elevation="8dp"
            android:fontFamily="@font/rubik_medium"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_section3"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/imageView_section3"
            app:layout_constraintTop_toBottomOf="@+id/imageView_section3"
            tools:text="Strenth-Weakness" />

        <ImageView
            android:id="@+id/done_imageView_section3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_section3"
            app:layout_constraintStart_toEndOf="@+id/imageView_section3"
            app:srcCompat="@drawable/ic_checked" />

        <ImageView
            android:id="@+id/imageView_section2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView_section1"
            app:layout_constraintTop_toTopOf="@+id/imageView_section1"
            app:srcCompat="@drawable/info" />

        <ImageView
            android:id="@+id/done_imageView_section2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_section2"
            app:layout_constraintStart_toEndOf="@+id/imageView_section2"
            app:srcCompat="@drawable/ic_checked" />

        <TextView
            android:id="@+id/textView_section2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_white_transparent"
            android:elevation="8dp"
            android:fontFamily="@font/rubik_medium"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_section2"
            app:layout_constraintStart_toStartOf="@+id/imageView_section2"
            app:layout_constraintTop_toBottomOf="@+id/imageView_section2"
            tools:text="Core Values" />

        <TextView
            android:id="@+id/textView_roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Awareness Room" />

        <TextView
            android:id="@+id/textView_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_section3"
            tools:text="Self-awareness" />

        <View
            android:id="@+id/lesson1_progress"
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_background_active"
            app:layout_constraintEnd_toStartOf="@+id/lesson2_progress"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView_roomName"
            app:layout_constraintTop_toBottomOf="@+id/textView_roomName" />

        <View
            android:id="@+id/lesson2_progress"
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_background_inactive"
            app:layout_constraintEnd_toStartOf="@+id/lesson3_progress"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/lesson1_progress"
            app:layout_constraintTop_toTopOf="@+id/lesson1_progress" />

        <View
            android:id="@+id/lesson3_progress"
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_background_inactive"
            app:layout_constraintEnd_toStartOf="@+id/lesson4_progress"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/lesson2_progress"
            app:layout_constraintTop_toTopOf="@+id/lesson2_progress" />

        <View
            android:id="@+id/lesson4_progress"
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_background_inactive"
            app:layout_constraintEnd_toStartOf="@+id/lesson5_progress"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/lesson3_progress"
            app:layout_constraintTop_toTopOf="@+id/lesson3_progress" />

        <View
            android:id="@+id/lesson5_progress"
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_background_inactive"
            app:layout_constraintEnd_toEndOf="@+id/textView_roomName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/lesson4_progress"
            app:layout_constraintTop_toTopOf="@+id/lesson4_progress" />

        <ImageView
            android:id="@+id/imageView_section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_section2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lesson1_progress"
            app:srcCompat="@drawable/book_shelf_1" />

        <TextView
            android:id="@+id/textView_section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background_white"
            android:elevation="8dp"
            android:fontFamily="@font/rubik_medium"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_section1"
            app:layout_constraintStart_toStartOf="@+id/imageView_section1"
            app:layout_constraintTop_toBottomOf="@+id/imageView_section1"
            tools:text="Support System" />

        <ImageView
            android:id="@+id/done_imageView_section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_section1"
            app:layout_constraintStart_toEndOf="@+id/imageView_section1"
            app:srcCompat="@drawable/ic_checked" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lessons_recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_courseName"
            tools:listitem="@layout/item_lesson" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>