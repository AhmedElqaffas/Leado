<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.1"
        android:foreground="?selectableItemBackgroundBorderless"
        android:background="@android:color/transparent"
        android:src="@drawable/back_icon"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/moreButton"
        android:layout_width="10dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.9"
        android:foreground="?selectableItemBackgroundBorderless"
        android:background="@android:color/transparent"
        android:src="@drawable/more_icon"
        android:scaleType="fitXY"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/moreButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/squidward_profile_image"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="Squidward"
        android:textAlignment="center"
        android:textColor="#1f314a"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="@id/profileImageView"
        app:layout_constraintRight_toRightOf="@id/profileImageView"
        app:layout_constraintTop_toBottomOf="@id/profileImageView" />

    <TextView
        android:id="@+id/occupationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintLeft_toLeftOf="@id/nameTextView"
        app:layout_constraintRight_toRightOf="@id/nameTextView"
        android:fontFamily="@font/rubik"
        android:text="Krusty Krap Employee"
        android:textSize="18sp"
        android:textAlignment="center"
        android:alpha="0.6"
        android:textColor="#1f314a"/>

    <TextView
        android:id="@+id/coursesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfuitext_regular"
        android:text="0"
        android:textColor="#1f314a"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/coursesWordTextView"
        app:layout_constraintRight_toRightOf="@id/coursesWordTextView"
        app:layout_constraintTop_toBottomOf="@id/occupationTextView"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/pointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/coursesTextView"
        app:layout_constraintLeft_toLeftOf="@id/pointsWordTextView"
        app:layout_constraintRight_toRightOf="@id/pointsWordTextView"
        android:fontFamily="@font/sfuitext_regular"
        android:text="0"
        android:textColor="#1f314a"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/coursesTextView"
        app:layout_constraintLeft_toLeftOf="@id/rankWordTextView"
        app:layout_constraintRight_toRightOf="@id/rankWordTextView"
        android:fontFamily="@font/sfuitext_regular"
        android:text="0"
        android:textColor="#1f314a"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/coursesWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coursesTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pointsWordTextView"
        android:fontFamily="@font/sfuitext_regular"
        android:text="Courses"
        android:textColor="#1f314a"
        android:textSize="25sp"
        android:alpha="0.6"/>

    <TextView
        android:id="@+id/pointsWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pointsTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/sfuitext_regular"
        android:text="Points"
        android:textColor="#1f314a"
        android:textSize="25sp"
        android:alpha="0.6"/>

    <TextView
        android:id="@+id/rankWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rankTextView"
        app:layout_constraintLeft_toRightOf="@id/pointsWordTextView"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/sfuitext_regular"
        android:text="Rank"
        android:textColor="#1f314a"
        android:textSize="25sp"
        android:alpha="0.6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileAchievementsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/coursesWordTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        tools:listitem="@layout/item_profile_achievement"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>