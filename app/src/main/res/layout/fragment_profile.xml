<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d2fcfa"
        tools:context=".mainNavigation.fragments.ProfileFragment">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:foreground="?selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03" />

        <ImageButton
            android:id="@+id/moreButton"
            android:layout_width="8dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:foreground="?selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/more_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/squidward_profile_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moreButton" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="Squidward"
            android:textAlignment="center"
            android:textColor="#1f314a"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/profileImageView"
            app:layout_constraintRight_toRightOf="@id/profileImageView"
            app:layout_constraintTop_toBottomOf="@id/profileImageView" />

        <TextView
            android:id="@+id/occupationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:fontFamily="@font/rubik"
            android:text="Krusty Krap Employee"
            android:textAlignment="center"
            android:textColor="#1f314a"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/nameTextView"
            app:layout_constraintRight_toRightOf="@id/nameTextView"
            app:layout_constraintTop_toBottomOf="@id/nameTextView" />

        <TextView
            android:id="@+id/coursesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_regular"
            android:text="0"
            android:textColor="#1f314a"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/coursesWordTextView"
            app:layout_constraintRight_toRightOf="@id/coursesWordTextView"
            app:layout_constraintTop_toBottomOf="@id/occupationTextView"
            app:layout_constraintVertical_bias="0.04" />

        <TextView
            android:id="@+id/pointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_regular"
            android:text="0"
            android:textColor="#1f314a"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/pointsWordTextView"
            app:layout_constraintRight_toRightOf="@id/pointsWordTextView"
            app:layout_constraintTop_toTopOf="@id/coursesTextView" />

        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_regular"
            android:text="0"
            android:textColor="#1f314a"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/rankWordTextView"
            app:layout_constraintRight_toRightOf="@id/rankWordTextView"
            app:layout_constraintTop_toTopOf="@id/coursesTextView" />

        <TextView
            android:id="@+id/coursesWordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:fontFamily="@font/sfuitext_regular"
            android:text="Courses"
            android:textColor="#1f314a"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/pointsWordTextView"
            app:layout_constraintTop_toBottomOf="@id/coursesTextView" />

        <TextView
            android:id="@+id/pointsWordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:fontFamily="@font/sfuitext_regular"
            android:text="Points"
            android:textColor="#1f314a"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pointsTextView" />

        <TextView
            android:id="@+id/rankWordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:fontFamily="@font/sfuitext_regular"
            android:text="Rank"
            android:textColor="#1f314a"
            android:textSize="25sp"
            app:layout_constraintLeft_toRightOf="@id/pointsWordTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rankTextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profileAchievementsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/coursesWordTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:background="#d2fcfa"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_profile_achievement" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>